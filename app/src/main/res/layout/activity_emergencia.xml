<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/IdCoordenadas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo3"
    tools:context="com.example.usuario.seguridadvehicular.emergencia">

    <Button
        android:id="@+id/IdCortaCorriente"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/cut"
        android:backgroundTint="@android:color/holo_red_dark"
        android:onClick="EnviarMensaje"/>

    <TextView
        android:id="@+id/IdCoordenadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/IdCortaCorriente"
        android:layout_marginTop="161dp"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/IdBCoordenada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/IdCoordenadas"
        android:layout_alignBottom="@+id/IdCoordenadas"
        android:layout_alignParentEnd="true"
        android:onClick="EnviarCoordenadas"
        android:text="Buscar Coordenadas" /><![CDATA[
        android:textSize="18sp" />

    ]]>

    <Button
        android:id="@+id/idBCoordenada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/IdCoordenadas"
        android:layout_alignBottom="@+id/IdCoordenadas"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="147dp"
        android:layout_marginEnd="16dp"
        android:onClick="EnviarCoordenadas"
        android:text="Buscar Coordenadas" />

    <Button
        android:id="@+id/MenuR2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:text="Menu"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/background_dark"
        android:text="Emergencia."
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/IdCortaCorriente"
        android:layout_centerHorizontal="true"
        android:text="Cortar Corriente."
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>
